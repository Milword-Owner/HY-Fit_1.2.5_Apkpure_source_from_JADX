    <LinearLayout android:gravity="center_vertical" android:id="@+id/historyDelLayout" android:paddingLeft="12dp" android:paddingRight="12dp" android:visibility="gone" android:layout_width="match_parent" android:layout_height="60dp" android:paddingHorizontal="12dp">
        <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/historyNum" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="@string/select_num" android:layout_weight="1"/>
        <TextView android:textSize="12sp" android:textColor="#ffffffff" android:gravity="center" android:id="@+id/historyDel" android:background="@drawable/radius_5_red" android:layout_width="130dp" android:layout_height="35dp" android:text="@string/history_delete"/>
    </LinearLayout>
</LinearLayout>
