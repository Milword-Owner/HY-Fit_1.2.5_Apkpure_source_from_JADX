<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/colorWhite" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.huayu.tzc.customview.MyHeaderView android:id="@+id/historyHeader" android:layout_width="match_parent" android:layout_height="wrap_content" app:header_title="@string/history_title" app:menu_img="@drawable/ic_del" app:menu_img_visibility="true"/>
    <View android:background="#f4f4f4" android:layout_width="match_parent" android:layout_height="8dp"/>
