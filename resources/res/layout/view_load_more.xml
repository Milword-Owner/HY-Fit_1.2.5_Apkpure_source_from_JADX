<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="50dp">
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/load_more_loading_view" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginRight="10dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/black30" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/loading" android:layout_centerInParent="true"/>
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/load_more_load_fail_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginRight="10dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/black30" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/loading_failed" android:layout_centerInParent="true"/>
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/load_more_load_end_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginRight="10dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/black30" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/to_the_bottom" android:layout_centerInParent="true"/>
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginLeft="10dp"/>
    </LinearLayout>
    <LinearLayout android:gravity="center" android:orientation="horizontal" android:id="@+id/load_more_load_complete_view" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginRight="10dp"/>
        <TextView android:textSize="14sp" android:textColor="@color/black30" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/completed" android:layout_centerInParent="true"/>
        <View android:background="@color/black30" android:layout_width="32dp" android:layout_height="1dp" android:layout_marginLeft="10dp"/>
    </LinearLayout>
</FrameLayout>
