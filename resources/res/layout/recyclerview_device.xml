<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:gravity="center_vertical" android:background="@color/colorWhite" android:paddingLeft="12dp" android:paddingRight="12dp" android:layout_width="match_parent" android:layout_height="65dp" android:layout_marginBottom="10dp">
    <ImageView android:id="@+id/device_logo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_tzc_false" android:layout_centerVertical="true"/>
    <TextView android:textSize="15sp" android:textColor="@color/colorBlack" android:id="@+id/device_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginTop="12dp" android:text="@string/device_title" android:layout_toRightOf="@+id/device_logo"/>
    <TextView android:textSize="12sp" android:textColor="#999999" android:gravity="bottom" android:id="@+id/device_mac" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="9dp" android:layout_marginBottom="12dp" android:text="@string/mac" android:layout_toRightOf="@+id/device_logo" android:layout_below="@+id/device_name" android:layout_alignParentBottom="true"/>
    <TextView android:textSize="12sp" android:textColor="#ff999999" android:id="@+id/device_connect" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/connect_false" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
</RelativeLayout>
