<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/color_white" android:fitsSystemWindows="true" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.huayu.tzc.customview.MyHeaderView android:id="@+id/tweet_header" android:layout_width="match_parent" android:layout_height="wrap_content" app:header_title="@string/details"/>
    <WebView android:id="@+id/tweet_content" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
    <View android:background="#cecece" android:layout_width="match_parent" android:layout_height="1px" android:layout_marginLeft="12dp" android:layout_marginTop="10dp" android:layout_marginRight="12dp"/>
    <LinearLayout android:gravity="center_vertical" android:paddingLeft="24dp" android:paddingRight="24dp" android:layout_width="match_parent" android:layout_height="40dp">
        <TextView android:textSize="12sp" android:textColor="#ff333333" android:id="@+id/tweet_kf" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/kf" android:layout_weight="1"/>
        <com.huayu.tzc.customview.MyImageView android:id="@+id/tweet_agree" android:layout_width="wrap_content" android:layout_height="wrap_content" app:img_false="@drawable/ic_agree" app:img_selected="false" app:img_true="@drawable/ic_agree_ok"/>
        <TextView android:id="@+id/tweetNum" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="0"/>
    </LinearLayout>
</LinearLayout>
