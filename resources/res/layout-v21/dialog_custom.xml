<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:background="@drawable/default_bag" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="30dp" android:elevation="10dp">
        <TextView android:textSize="18sp" android:textColor="#404040" android:gravity="center" android:id="@+id/dialog_title" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="-10dp" android:text=""/>
        <TextView android:textSize="16sp" android:textColor="#404040" android:gravity="center" android:id="@+id/dialog_content" android:scrollbars="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="20dp" android:layout_marginRight="10dp" android:layout_marginBottom="20dp" android:maxHeight="200dp" android:minHeight="50dp" android:text="" android:lineSpacingExtra="3dp"/>
        <LinearLayout android:orientation="horizontal" android:background="@drawable/custom_dialog_btn_bag" android:layout_width="match_parent" android:layout_height="50dp">
            <TextView android:textSize="16sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/dialog_cancel" android:background="@drawable/custom_dialog_cancel" android:focusable="true" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:layout_marginTop="0.5dp" android:foreground="?android:attr/selectableItemBackground" android:text="@string/common_cancel" android:layout_weight="1"/>
            <TextView android:textSize="16sp" android:textColor="@color/colorWhite" android:gravity="center" android:id="@+id/dialog_ok" android:background="@drawable/custom_dialog_ok" android:focusable="true" android:clickable="true" android:layout_width="0dp" android:layout_height="match_parent" android:foreground="?android:attr/selectableItemBackground" android:text="@string/common_confirm" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
